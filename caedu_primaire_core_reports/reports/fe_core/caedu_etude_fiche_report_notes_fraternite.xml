									    	<t t-set="td_css_to_add" t-value="'border-left: 3px solid black;'"/>
										    </t>
										    <t t-if="col_num == nb_col_cours">
										    	<t t-set="td_css_to_add_end" t-value="'border-right: 3px solid black;'"/>
